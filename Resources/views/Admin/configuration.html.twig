{% extends 'AdminCoreBundle::layout.html.twig' %}


{% block breadcrumb %}

    {% include '@AdminCore/Common/breadcrumb.html.twig' with {
        breadcrumb: [
            { name: 'admin.plugin.plural'|trans, url: url('admin_plugin_list') },
            { name: 'product_csv_plugin.title'|trans, active: true },
        ]}
    %}

{% endblock breadcrumb %}


{% block content %}

    <form class="form" method="POST">
        <fieldset>
            <div class="col-1-3">
                <h2 class="fw-n">{{ 'product_csv_plugin.section.export.title'|trans }}</h2>
            </div>
            <div class="col-2-3">
                <div class="box">
                    <ol>
                        <li>
                            <label for="export_filename">{{ 'product_csv_plugin.field.export_filename.title'|trans }}</label>

                            <input id="export_filename" type="text" name="export_filename"
                                   value="{{ plugin.configuration['export_filename'] }}"
                                   placeholder="{{ 'product_csv_plugin.field.export_filename.placeholder'|trans }}" />
                        </li>
                    </ol>
                </div>
            </div>

            <div class="col-1-3">
                &nbsp;
            </div>
            <div class="col-2-3">
                <button type="submit" class="button-primary">{{ 'ui.forms.save'|trans }}</button>
            </div>
        </fieldset>
    </form>

{% endblock content %}
