{% extends 'AdminCoreBundle::layout.html.twig' %}


{% block content_title %}
    {{ 'Configuration Zone'|trans }}
{% endblock content_title %}


{% block breadcrumb %}
    {% include "@AdminCore/Common/breadcrumb.html.twig" with {
        breadcrumb: {
            'Plugins': {
                    'url': url('admin_plugin_list')
                },
                ('Product CSV'): {
                    'active': true
                }
            }
        }
    %}
{% endblock breadcrumb %}


{% block content %}
    <form class="form" method="POST">
        <fieldset>
            <div class="col-1-3">
                <h2 class="fw-n">Product CSV Setup</h2>
            </div>
            <div class="col-2-3">
                <div class="box">
                    <ol>
                        <li>
                            <label for="export_filename">{{ 'Default filename on export'|trans }}</label>

                            <input id="export_filename" type="text" name="export_filename" value="{{ plugin.configuration['export_filename'] }}" placeholder="{{ 'Enter a filename'|trans }}" />
                        </li>
                    </ol>
                </div>
            </div>
            <div class="col-1-3">
                &nbsp;
            </div>
            <div class="col-2-3">
                <button type="submit" class="button-primary">{{ 'Save'|trans }}</button>
            </div>
        </fieldset>
    </form>
{% endblock content %}
